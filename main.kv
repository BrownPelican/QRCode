<MainApp>:

MDBoxLayout:
    orientation: "vertical"
    spacing: dp(20)

    MDToolbar:
        id: toolbar
        title: app.title
        md_bg_color: app.theme_cls.primary_color
        left_action_items: [["menu", lambda x:  nav_drawer.set_state("open")]]
        background_palette: "Primary"
        MDIconButton:
            id: button
            icon: "exit-to-app"
            on_release: app.quit()

    ScrollView:
        MDGridLayout:
            padding: dp(10)
            spacing: dp(20)
            cols: 1
            adaptive_height: True

            MDIconButton:
                icon: "camera"
                md_bg_color: app.theme_cls.primary_color
                on_press: app.startCamera()

            MDSeparator:

            MDLabel:
                id: code_label
                name: code_label
                text: "Cam"
                halign: 'center'

